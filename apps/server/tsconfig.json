{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "target": "ES6",
    "esModuleInterop": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/data/*": ["./src/data/*"],
      "@/domain/*": ["./src/domain/*"],
      "@/helpers/*": ["./src/helpers/*"],
      "@/infra/*": ["./src/infra/*"],
      "@/interfaces/*": ["./src/interfaces/*"],
      "@/main/*": ["./src/main/*"],
      "@/presentation/*": ["./src/presentation/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/test/*": ["./test/*"]
    }
  }
}
