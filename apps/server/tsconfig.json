{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "target": "ES6",
    "esModuleInterop": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  }
}
